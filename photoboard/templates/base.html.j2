<!DOCTYPE html>
<html>
  <head>
      <title>Photo Board{% block title %}{% end %}</title>
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
              <!-- Bootstrap -->
    <link href="/public/css/bootstrap.min.css" rel="stylesheet" media="screen">
    </head>
        <body>
    {% block nav %}
    <div class="navbar navbar-inverse nav">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/">Photo Board</a>

                <div class="nav-collapse collapse">
              <ul class="nav">
                  <li class="divider-vertical"></li>
                  <li><a href="/"><i class="icon-home icon-white"></i>Home</a></li>
                  <li><a href="/boards"><i class="icon-white"></i>Boards</a></li>
                  <li><a href="/create"><i class="icon-white"></i>New Board</a></li>
              </ul>
              <div class="pull-right">
                <ul class="nav pull-right">
	          {% if current_user is None %}

		  <li><a href="/login">Login</a></li>
    	          {% else %}
                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, {{ current_user['email'] }} <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="icon-cog"></i> Preferences</a></li>
                            <li class="divider"></li>
                            <li><a href="/logout"><i class="icon-off"></i> Logout</a></li>
                        </ul>
                    </li>
	          {% end %}
                </ul>
              </div>
            </div>
        </div>
    </div>
    </div>
    {% end %}
    <div style="padding-left: 40px;padding-right: 40px;">
      <h3>{% block header %}{% end %}</h3>
      <script src="http://code.jquery.com/jquery.js"></script>
      <script src="/public/js/bootstrap.min.js"></script>
      {% block main %}
       
      {% end %}
    </div>
  </body>
</html>
